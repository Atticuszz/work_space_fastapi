atticuszhou.xyz {
	redir /api /api/
	handle_path /api/* {
		reverse_proxy backend:5000
	}

	handle {
		root * /usr/share/caddy
		file_server
		try_files {path} /index.html
	}

	log {
		output stdout
	}

	# 配置 TLS
	tls /etc/letsencrypt/live/atticuszhou.xyz/fullchain.pem /etc/letsencrypt/live/atticuszhou.xyz/privkey.pem
}
